<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Product.
    -->
    <changeSet id="20190615180415-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="product_sizes"
                                 constraintName="fk_product_sizes_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <addForeignKeyConstraint baseColumnNames="sizes_id"
                                 baseTableName="product_sizes"
                                 constraintName="fk_product_sizes_sizes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="size"/>
        
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="product_categories"
                                 constraintName="fk_product_categories_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <addForeignKeyConstraint baseColumnNames="categories_id"
                                 baseTableName="product_categories"
                                 constraintName="fk_product_categories_categories_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>
        
    </changeSet>
</databaseChangeLog>
